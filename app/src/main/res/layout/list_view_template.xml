<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="70dp"
    android:padding="10dp" android:orientation="horizontal"
    android:background="@drawable/yellow_border_rect">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/track_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TRACK NAME"
            android:textAllCaps="true"
            android:textColor="@color/textColor"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/artist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/track_name"
            android:text="ARTIST NAME"
            android:textSize="15sp"
            android:textColor="@color/textColor"
            app:fontFamily="monospace" />

    </LinearLayout>


    <ImageView
        android:id="@+id/upvote_song_button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="4dp"
        android:src="@drawable/upvote_thumb"/>

    <TextView
        android:id="@+id/num_of_upvotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="42"
        android:layout_toLeftOf="@id/upvote_song_button"
        android:textColor="@color/textColor"
        android:layout_centerVertical="true"
        />


</RelativeLayout>